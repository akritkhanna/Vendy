<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="form_text">
        <item name="android:layout_marginStart">12sp</item>
        <item name="android:textColor">@color/colorlite</item>
        <item name="android:textSize">17sp</item>

    </style>

    <style name="form_edittxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:maxEms">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/form_text</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

</resources>
